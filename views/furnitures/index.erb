<h1>Lucky Furniture Market</h1>


<% if logged_in? %>
  <h2>Dear staff, Welcome Home </h2>
  <nav class="nav">
    <form action="/furnitures/search" class="nav-left">
      <input type="text" name="item" value="Search an item">
      <button>Search</button>
    </form>
    <section class="nav-right">
 
    <%# add an item%>
      <a href="./furnitures/datamanage">Data Manage</a>
      <form action="/sessions" method="POST">
          <input type="hidden" name="_method" value="delete">
          <button>Logout</button>
      </form>     
    </section>   
  </nav>

  <section class="furnitures">
    <% furnitures.each do |furniture| %>
      <section class="furniture">
        <header>
          <h2><%= furniture['item']%></h2>
          <section class="control">
            <a href="./furnitures/<%= furniture['id'] %>/setprice">Set Price</a>
            <a href="./furnitures/<%= furniture['id'] %>/update">Update</a>
  
            <form action="/furnitures/<%= furniture['id']%>" method="POST">
                <input type="hidden" name="_method" value="delete">
                <button>Delete</button>
            </form> 
          </section>  
        </header>
        <img src="<%= furniture['photo_url']%>" alt="">
        <p><span class="num-left"><%= furniture['quantity'] %> </span> in Stock</p>
        <p> Price: $<span class="num-left"><%= furniture['price'] %> </span> </p>
      </section>
    <% end %>
  </section>
<% else %>
  <nav class="nav">
    <form action="/furnitures/search" class="nav-left">
        <input type="text" name="item" value="Search an item">
        <button>Search</button>
    </form>
    <section class="nav-right">
      <%# add an item%>
      <a href="./furnitures/donate">Donate Furnitures</a>
      <a href="/users/new">Sign up</a>
      <a href="/sessions/new">Login</a>
      <a href="/sessions/staff">Staff</a> 
    </section>   
  </nav>
  <section class="describe">
    <h2>We are here to support you</h2>
    <p>We are a family-owned second-hand furniturn store located at 55 Lucky Street in Adelaide. </p>
